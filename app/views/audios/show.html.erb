 <%= favourite_button(@audio) if current_user.present? %>

<p>
  <b><%=  t("metadata.start_date") %>:</b> 
  <%= @audio.date %>
</p>

<p>
  <b><%=  t("metadata.description") %>:</b>
  <%= @audio.description %>
</p>

<p>
  <b><%= t("metadata.license") %>:</b>
  <%= @audio.license %>
</p>

