<div  id="single-asset" class="span7 ofsset1">

  <%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
       <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>  
    <div class="field">
      <%= f.label t("metadata.title") %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">  
      <%= f.label t("metadata.start_date") %><br />
      <%= f.datepicker :date, :dateFormat => "yy-mm-dd" %>
    </div>
    <div class="field">
      <%= f.label t("metadata.time") %><br />
       <%= f.text_field :time , :class => "time-picker" %>
    </div>
    <div class="field">
      <%= f.label t("metadata.description") %><br />
      <%= f.text_area :description %>
    </div>
    
  <div class="field">
     <% if !@cycles.nil? %>  
       <%= f.label :cycle_ids %><br />
       <%= f.select(:cycle_ids, @cycles.collect {|c| [c.title, c.id]}) %>
     <% end %>
  </div>

  <div class="field" style="background-color: #E89BB6">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :tag_list %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>
